<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item> <!-- Primary color of the app -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item> <!-- Darker version of the primary color -->
        <item name="colorAccent">@color/colorAccent</item> <!-- Accent color of the app -->
    </style>

    <!-- Custom theme for DatePickerDialog -->
    <style name="CustomDatePickerDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/your_primary_color</item> <!-- Primary color for the dialog -->
        <item name="android:textColorPrimary">@color/your_primary_text_color</item> <!-- Primary text color in the dialog -->
        <item name="android:textColorSecondary">@color/your_secondary_text_color</item> <!-- Secondary text color in the dialog -->
        <item name="android:buttonBarButtonStyle">@style/CustomDatePickerDialog.Button</item> <!-- Style for buttons in the dialog -->
    </style>

    <!-- Custom Button style for DatePickerDialog -->
    <style name="CustomDatePickerDialog.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/button_text_color</item> <!-- Custom button text color -->
    </style>

</resources>
