<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomDatePickerDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/your_primary_color</item>
        <item name="android:textColorPrimary">@color/your_primary_text_color</item>
        <item name="android:textColorSecondary">@color/your_secondary_text_color</item>
        <item name="android:buttonBarButtonStyle">@style/CustomDatePickerDialog.Button</item> <!-- Added for button style -->
    </style>

    <!-- Custom Button style for DatePickerDialog -->
    <style name="CustomDatePickerDialog.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/button_text_color</item> <!-- Custom button text color -->
    </style>

</resources>
