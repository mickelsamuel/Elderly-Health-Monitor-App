<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/patientNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Name"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/patientIDTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient ID"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/patientHeartRateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heart Rate: 98"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/patientTemperatureText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature: 36.5Â°C"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/patientAccelerometerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accelerometer: X: 0.1, Y: 0.2, Z: 9.8"
        android:textSize="18sp"/>
    <Button
        android:id="@+id/removePatientButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REMOVE"/>
</LinearLayout>
